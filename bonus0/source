char		*p(char *buf, char *str)
{
	char	buf2[4096];

	puts (str);
	read(0, buf2, 4096);
	*strchr(buf, 10) = 0;
	return (strncpy(buf, buf2, 20);
}

char			*pp(char *buf)
{
	char		buf2[20];
	p(buf2, " - ");
	char		buf3[20];
	p(buf3, " - ");
	strcpy(buf, buf2);
	buf[strlen(buf)] = ' ';
	return (strcat(buf, buf3);
}

int			main(void)
	{
	char	buf[64];
	pp(buf);
	puts(buf);
	return (1);
}
